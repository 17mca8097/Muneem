<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/ScreenColor"
    android:layout_height="match_parent"
    tools:context=".Activities.BalanceSheet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgTotalStatus"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Cash"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgTotalStatus"
                        android:layout_width="111dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/ic_total" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCash"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:text="Total Money Added"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtTotalStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtCash"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@id/textView3"
                        android:ems="8"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView3"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="0dp"
                        android:text="Total Expense"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtTotalExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTotalStatus"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@id/textView4"
                        android:ems="8"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView4"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="0dp"
                        android:text="Remaining"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtTotalExpense"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_toRightOf="@id/textView5"
                        android:ems="8"
                        android:textSize="20sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgAccountStatus"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="false"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/ic_account_status" />

                    <TextView
                        android:id="@+id/txtView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgAccountStatus"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="0dp"
                        android:fontFamily="@font/aclonica"
                        android:text="Account"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtAccountStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtView6"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/aclonica"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgCashStatus"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="106dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imgAccountStatus"
                        app:srcCompat="@drawable/ic_cash_status" />

                    <TextView
                        android:id="@+id/txtView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgCashStatus"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/txtView6"
                        android:fontFamily="@font/aclonica"
                        android:text="Cash"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtCashStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtView7"
                        android:layout_centerHorizontal="false"
                        android:layout_marginLeft="123dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/txtAccountStatus"
                        android:fontFamily="@font/aclonica"
                        android:textSize="20sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <AutoCompleteTextView
                        android:id="@+id/txtReasonAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:enabled="false"
                        android:textColor="#220000"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/aclonica"
                        android:textSize="10sp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <AutoCompleteTextView
                        android:id="@+id/txtReasonCash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:enabled="false"
                        android:textColor="#220000"
                        android:inputType="textMultiLine"
                        android:fontFamily="@font/aclonica"
                        android:textSize="10sp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="195dp"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchEdit"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:checked="false"
                        android:layout_centerHorizontal="true"
                        android:text="Edit"
                        android:textSize="20sp"
                        android:fontFamily="@font/aclonica"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>